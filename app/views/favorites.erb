
<h1>Favorites</h1>
<% User.find(session[:id]).campgrounds.each do |camp| %>
<div data-component="media-object" name="<%=camp.park_num%>" class="clearfix">
	<% if camp.pic_url == "/images/nophoto.jpg" %>
	<img src="https://raw.githubusercontent.com/chorus-frogs-2014/ph2-p10a-build-something-beautiful-challenge/matias/source/polyscape%20copy.jpeg?token=6801325__eyJzY29wZSI6IlJhd0Jsb2I6Y2hvcnVzLWZyb2dzLTIwMTQvcGgyLXAxMGEtYnVpbGQtc29tZXRoaW5nLWJlYXV0aWZ1bC1jaGFsbGVuZ2UvbWF0aWFzL3NvdXJjZS9wb2x5c2NhcGUgY29weS5qcGVnIiwiZXhwaXJlcyI6MTQwNTU4OTY5NX0%3D--46564390806632ab6249c43d3e4f908fb52cf7d3" class="left mr2 w280">
	<%else%>
	<img src="http://www.reserveamerica.com<%= camp.pic_url%>" class="left mr2 w280">
	<%end%>
	<div class="oh">
		<div> <label class= "bold h4"> Name: </label><%= camp.name %> </div>
		<div> <label class= "bold h4"> State:</label> <%= camp.state %> </div>
		<div> <label class= "bold h4"> Pets?:</label> <%= camp.pets %> </div>
		<div> <label class= "bold h4"> Type: </label><%= camp.contract_type%></div>
		<div> <label class= "bold h4"> Water Front: </label><%= camp.water_front %> </div>
	</div>
	<button> <a href="/remove/<%=camp.park_num%>" class="remove">Remove</a></button>
	<hr>
</div>


<%end%>